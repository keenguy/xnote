{
  "name": "xnote",
  "version": "0.2.0",
  "description": "A markdown studio for taking notes.",
  "main": "build/src/main/electron.js",
  "author": "guyong <dujcel@icloud.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "serve": "webpack-dev-server",
    "dev": "cross-env NODE_ENV=development electron src/main/electron.js",
    "build": "rm -rf build && webpack --config webpack.prod.config.js",
    "start": "cross-env NODE_ENV=production electron ./build/src/main/electron.js",
    "test": "electron test/main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.guyong.xnote",
    "productName": "Xnote",
    "copyright": "Copyright Â© 2019 ${author}",
    "mac": {
      "target": [
        "dir"
      ]
    },
    "files": [
      "build/**/*"
    ],
    "asarUnpack": [
      "build/pages/preview.html",
      "build/renderer/preview.js"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.6",
    "babel-polyfill": "^6.26.0",
    "copy-webpack-plugin": "^5.0.3",
    "cross-env": "^5.2.0",
    "css-loader": "^3.0.0",
    "electron": "^13.6.6",
    "electron-builder": "20.41.0",
    "file-loader": "^4.0.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.7.0",
    "style-loader": "^0.23.1",
    "typescript": "^3.5.1",
    "url-loader": "^2.0.0",
    "webpack": "^4.33.0",
    "webpack-cli": "^3.3.4",
    "webpack-dev-server": "^3.7.2",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "codemirror": "^5.48.0",
    "electron-find": "^1.0.6",
    "electron-is-dev": "^1.1.0",
    "electron-store": "^4.0.0",
    "handlebars": "^4.1.2",
    "highlight.js": "^9.15.8",
    "js-yaml": "^3.13.1",
    "markdown-it": "^8.4.2",
    "markdown-it-anchor": "^5.2.4",
    "markdown-it-attrs": "^2.4.1",
    "markdown-it-container": "^2.0.0",
    "markdown-it-footnote": "^3.0.1",
    "markdown-it-task-lists": "^2.1.1",
    "material-design-icons": "^3.0.1",
    "mathjax": "^2.7.5",
    "mathjax-node": "^2.1.1",
    "react": "^16.8.6",
    "react-codemirror2": "^6.0.0",
    "react-dom": "^16.8.6"
  }
}
